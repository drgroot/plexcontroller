{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "airbnb-typescript"
  ],
  "parserOptions": {
    "project": "./tsconfig.testing.json"
  },
  "rules": {
    "no-restricted-syntax": [
      2,
      "BinaryExpression[operator='in']"
    ],
    "no-await-in-loop": [
      2
    ]
  }
}